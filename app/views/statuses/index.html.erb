<div class="statuses-container">

 <% @statuses.each do |status| %>
  <div class="element">
      <p><%= status.content %> </p>
	 
	 	<% if current_user == status.user%>
	       <ul class="controll-buttons">
		        <li><%= link_to image_tag('edit.svg'), edit_status_path(status) %></li>
		        <li><%= link_to image_tag('delete.svg'), status, method: :delete, data: { confirm: 'Are you sure?' } %></li>

		        
	        </ul>
	    <% end %>
    </div>

<% end %>


<div class="apple_pagination">

   <%= will_paginate @statuses, :previous_label => '<<', :next_label => '>>' %>

  </div>
</div>
